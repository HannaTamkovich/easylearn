    <changeSet author="abudai" id="russian-word-table">
        <createTable tableName="russian_word">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="russian_word_pkey"/>
            </column>

            <column name="word" type="NVARCHAR(2000)"/>
            <column name="code" type="NVARCHAR(2000)"/>
            <column name="code_parent" type="NVARCHAR(2000)"/>
            <column name="gender" type="NVARCHAR(255)"/>
            <column name="wcase" type="NVARCHAR(255)"/>
            <column name="soul" type="NVARCHAR(255)"/>
        </createTable>
